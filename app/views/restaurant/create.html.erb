
<%= form_for @restaurant, :url => restaurants_create_path(@restaurant), :method => :post do |f|%>
		
	<p>
		<%= f.label 'Name' %><br>
		<%= f.text_field :name %>
	</p>

	<p> 
		<%= f.label 'Phone' %><br>
		<%= f.text_field :phone %>
	</p>

	<p> 
		<%= f.label 'Email' %><br>
		<%= f.text_field :email %>
	</p>

	<p> 
		<%= f.label 'Address' %><br>
		<%= f.text_area :address %>
	</p>
	
	<p> 
		<%= f.submit 'Add Restaurant' %>
	</p>

	
<% end %>